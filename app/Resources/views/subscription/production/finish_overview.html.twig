{% extends "base.html.twig" %}

{% block title %}{{ 'production.overview.finish.title'|trans }}{% endblock %}
{% block body %}
    <h2>{{ 'production.overview.finish.subtitle'|trans }}</h2>

    <p>
        {{ 'production.overview.finish.intro'|trans|raw }}
    </p>

    {% include 'subscription/partials/proplist.html.twig' %}

    <a href="{{ path('connect_published_edit', {id: subscription.id}) }}" class="btn btn-default">
        {{ 'production.overview.finish.button.cancel'|trans }}
    </a>
    <form method="post" style="display: inline;">
        <input type="submit"
                class="btn btn-primary"
                value="{{ 'production.overview.finish.button.confirm'|trans }}">
    </form>

{% endblock %}
