<fieldset>
    <div class="row">
        <div class="col-xs-11">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'ticketNo'|humanize|trans }}</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ subscription.ticketNo }}</p>
                </div>
            </div>
        </div>

        <div class="col-xs-1">
            <a href="#" class="btn btn-link popover-link" data-content="{{ 'form.help.ticketNo'|trans|escape('html_attr') }}">
                {{ icon('question-circle') }}
            </a>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>
        <div class="row">
            <div class="col-xs-11">
                {{ 'form.legend.contact'|trans }}
            </div>

            <div class="col-xs-1">
                <a href="#" class="btn btn-link popover-link" data-content="{{ 'form.help.contact'|trans|escape('html_attr') }}">
                    {{ icon('question-circle') }}
                </a>
            </div>
        </div>
    </legend>

    <div class="row">
        <div class="col-xs-11">
            {{ form_row(form.contact.firstName) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-11">
            {{ form_row(form.contact.lastName) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-11">
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ 'email'|humanize|trans }}</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{ subscription.contact.email }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-11">
            {{ form_row(form.contact.phone) }}
        </div>
    </div>
</fieldset>
